<h1>Bookmark</h1>

<%= form_for @bookmark, :html => { :class => "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @bookmark.title %></p>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @bookmark.url %></p>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shortening, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @bookmark.shortening %></p>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :site, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @bookmark.site.url %></p>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to edit_bookmark_path(@bookmark), class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
      <% end %>
      <%= link_to 'Back', bookmarks_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
