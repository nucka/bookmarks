<% if @bookmark.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@bookmark.errors.count, "error") %> prohibited
        this bookmark from being saved:
      </h2>
      <ul>
        <% @bookmark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @bookmark, :html => { :class => "form-horizontal" } do |f| %>
  <div class="form-group <% if @bookmark.errors[:title].any? %> has-error <% end %>">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
      <% if @bookmark.errors[:title].any? %>
        <span id="helpBlock" class="help-block"><%= @bookmark.errors[:title].join(', ') %></span>
      <% end %>
    </div>
  </div>
  <div class="form-group <% if @bookmark.errors[:url].any? %> has-error <% end %>">
    <%= f.label :url, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :url, class: 'form-control' %>
      <% if @bookmark.errors[:url].any? %>
        <span id="helpBlock" class="help-block"><%= @bookmark.errors[:url].join(', ') %></span>
      <% end %>
    </div>
  </div>
  <div class="form-group <% if @bookmark.errors[:shortening].any? %> has-error <% end %>">
    <%= f.label :shortening, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :shortening, class: 'form-control' %>
      <% if @bookmark.errors[:shortening].any? %>
        <span id="helpBlock" class="help-block"><%= @bookmark.errors[:shortening].join(', ') %></span>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to 'Back', bookmarks_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
