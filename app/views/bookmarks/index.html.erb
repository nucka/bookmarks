<h1>Listing bookmarks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Site</th>
      <th>Url</th>
      <th>Shortening</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.site.url %></td>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.shortening %></td>
        <td>
          <%= link_to bookmark_path(bookmark), class: 'btn btn-default  btn-link ' do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            Show
          <% end %>
          <%= link_to edit_bookmark_path(bookmark), class: 'btn btn-primary  btn-link ' do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Edit
          <% end %>
          <%= link_to bookmark_path(bookmark), class: 'btn btn-danger  btn-link ', method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Remove
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
